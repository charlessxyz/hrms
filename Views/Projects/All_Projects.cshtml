@model dynamic

@{
    ViewData["Title"] = "All Projects";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">All Projects</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Project Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Status</th>
                                    <th>Progress</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var project in Model.projects)
                                {
                                    <tr>
                                        <td>@project.ProName</td>
                                        <td>@project.ProStartDate?.ToString("yyyy-MM-dd")</td>
                                        <td>@project.ProEndDate?.ToString("yyyy-MM-dd")</td>
                                        <td>@project.ProStatus</td>
                                        <td>@project.Progress%</td>
                                        <td>
                                            <a href="/Projects/view?P=@project.Id" class="btn btn-sm btn-primary">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
